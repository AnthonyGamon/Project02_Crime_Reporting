<li class="cards_item" id="card-{{id}}">
  <div class="card">
    {{#if ofUser}}
      <container class="card-delete">
        <div class="btn edit-btn" data-id="{{id}}"></div><div data-id="{{id}}" class="btn delete-btn"></div>
     </container>
    {{/if}}
    <div class="card_content card-delete">
      <h2 class="card_title update-title" data-id="{{id}}" id="title-{{id}}">{{title}}</h2>
      <h1 class="card_text update-body" data-id="{{id}}" id="body-{{id}}">{{body}}</h1>
    </div>
  </div>
</li>
